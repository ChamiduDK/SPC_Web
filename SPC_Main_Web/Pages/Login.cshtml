@page
@model SPC_Main_Web.Pages.LoginModel
@{
    ViewData["Title"] = "User Login";
}

@if (TempData["failure"] != null)
{
    <div class="alert alert-danger">@TempData["failure"]</div>
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/SPC_Main_Web.styles.css" asp-append-version="true" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: #1c1f29;
    }

    .login-container {
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        justify-content: center;
        align-items: center;
        margin-top: 10%;
        margin-left: 35%;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px;
    }

    .btn-custom {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        font-weight: bold;
        background: #00cccc;
        color: white;
        transition: 0.3s;
    }

        .btn-custom:hover {
            background: #008080;
        }

    .text-center a {
        text-decoration: none;
        font-weight: bold;
        color: #00cccc;
    }

        .text-center a:hover {
            color: #008080;
        }

    /* CTA Button */
    .cta-button {
        padding: 12px 30px;
        background-color: #00cccc;
        color: white;
        text-decoration: none;
        border-radius: 30px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: background-color 0.3s ease, transform 0.2s ease;
        display: inline-block;
        margin-right: 10px;
    }

        .cta-button:hover {
            background-color: #008080;
            transform: scale(1.05);
        }
</style>

<div class="login-container">
    <h3 class="text-center mb-3">User Login</h3>
    <form method="post">
        <!-- Email and Password fields -->
        <div class="mb-3">
            <label class="form-label">Email:</label>
            <input asp-for="Email" class="form-control" required type="email" placeholder="Enter your email">
        </div>
        <div class="mb-3">
            <label class="form-label">Password:</label>
            <input asp-for="Password" class="form-control" required type="password" placeholder="Enter your password">
        </div>

        <!-- Dropdown to select user type -->
        <div class="mb-3">
            <label class="form-label">Login As:</label>
            <select asp-for="UserType" class="form-control" required>
                <option value="Supplier">Supplier</option>
                <option value="Pharmacy">Pharmacy</option>
            </select>
        </div>

        <button type="submit" class="btn btn-custom">Login</button>
    </form>

    <p class="text-center mt-3">Don't have an account? <a asp-page="/Register">Register</a></p>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
