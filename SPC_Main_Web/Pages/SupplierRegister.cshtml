@page
@model SPC_Main_Web.Pages.SupplierRegisterModel
@{
    ViewData["Title"] = "Supplier Registration";
}


@if (TempData["failure"] != null)
{
    <div class="alert alert-danger">@TempData["failure"]</div>
}

<style>
    b {
        background-color: #1c1f29;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .register-container {
        background: #1c1f29;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0px 0px 20px #00cccc;
        max-width: 450px;
        width: 100%;
        margin-top: 3%;
        margin-left: 35%;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px;
    }

    .btn-custom {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        font-weight: bold;
        background: #00cccc;
        color: white;
        transition: 0.3s;
    }

        .btn-custom:hover {
            background: #00cccc;
        }

    .form-label {
        font-weight: 600;
        color: #ccc;

    }

    /* CTA Button */
    .cta-button {
        padding: 12px 30px;
        background-color: #00cccc;
        color: white;
        text-decoration: none;
        border-radius: 30px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: background-color 0.3s ease, transform 0.2s ease;
        display: inline-block;
        margin-right: 10px;
    }

        .cta-button:hover {
            background-color: #008080;
            transform: scale(1.05);
        }

    /* Logo Styling */
    .logo-container {
        position: relative;
        z-index: 2;
        max-width: 70%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .logo-container img {
            max-width: 1000px;
            height: auto;
            filter: drop-shadow(4px 4px 10px rgba(0, 0, 0, 0.5));
        }
</style>

<body class="b">
    <div class="register-container">
        <h3 class="text-center mb-3" style="color:#ccc">Supplier Registration</h3>
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Name:</label>
                <input asp-for="Supplier.Name" class="form-control" required placeholder="Enter your name">
            </div>
            <div class="mb-3">
                <label class="form-label">Email:</label>
                <input asp-for="Supplier.Email" class="form-control" required type="email" placeholder="Enter your email">
            </div>
            <div class="mb-3">
                <label class="form-label">Phone Number:</label>
                <input asp-for="Supplier.PhoneNumber" class="form-control" required placeholder="Enter your phone number">
            </div>
            <div class="mb-3">
                <label class="form-label">Address:</label>
                <input asp-for="Supplier.Address" class="form-control" placeholder="Enter your address">
            </div>
            <div class="mb-3">
                <label class="form-label">Description:</label>
                <input asp-for="Supplier.Description" class="form-control" placeholder="Short description about your business">
            </div>
            <div class="mb-3">
                <label class="form-label">Password:</label>
                <input asp-for="Supplier.Password" class="form-control" required type="password" placeholder="Create a password">
            </div>
            <button type="submit" class="btn btn-custom">Register</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>